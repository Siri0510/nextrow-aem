<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="cq:Dialog"
    xtype="dialog">
    <items
        jcr:primaryType="nt:unstructured"
        xtype="tabpanel">
        <items jcr:primaryType="cq:WidgetCollection">
            <first
                jcr:primaryType="cq:Widget"
                title="First"
                xtype="panel">
                <items jcr:primaryType="cq:WidgetCollection">
                    <position
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Text Position"
                        name="./position"
                        type="select"
                        xtype="selection">
                        <options jcr:primaryType="cq:WidgetCollection">
                            <layout-one
                                jcr:primaryType="nt:unstructured"
                                text="layout-one"
                                value="layout-one"/>
                            <layout-two
                                jcr:primaryType="nt:unstructured"
                                text="layout-two"
                                value="layout-two"/>
                            <layout-three
                                jcr:primaryType="nt:unstructured"
                                text="layout-three"
                                value="layout-three"/>
                        </options>
                        <listeners
                            jcr:primaryType="nt:unstructured"
                            selectionchanged="function(obj, value, isChecked) {var tabs = obj.findParentByType('tabpanel');console.log(tabs);console.log(value);if(value == 'layout-one') {tabs.unhideTabStripItem(1);tabs.hideTabStripItem(2);}else if(value == 'layout-two') { tabs.hideTabStripItem(1);tabs.unhideTabStripItem(2);}  else { tabs.hideTabStripItem(1);tabs.hideTabStripItem(2);tabs.hideTabStripItem(3);}"/>
                    </position>
                </items>
            </first>
            <layout-one
                jcr:primaryType="cq:Widget"
                title="layout-one"
                xtype="panel">
                <items jcr:primaryType="cq:WidgetCollection">
                    <position
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Select State"
                        name="./states"
                        options="/bin/StatesServlet"
                        type="select"
                        xtype="selection"/>
                    <position1
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Select Fruits"
                        name="./fruits"
                        options="/bin/FruitsServlet"
                        type="select"
                        xtype="selection"/>
                </items>
            </layout-one>
            <layout-two
                jcr:primaryType="cq:Widget"
                title="layout-two"
                xtype="panel">
                <items jcr:primaryType="cq:WidgetCollection">
                    <position2
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Select State"
                        name="./states1"
                        options="/bin/StatesServlet"
                        type="select"
                        xtype="selection"/>
                    <position3
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Select Fruits"
                        name="./fruits1"
                        options="/bin/FruitsServlet"
                        type="select"
                        xtype="selection"/>
                </items>
            </layout-two>
            <layout-three
                jcr:primaryType="cq:Widget"
                title="layout-two"
                xtype="panel">
                <items jcr:primaryType="cq:WidgetCollection">
                    <position4
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Select State"
                        name="./states2"
                        options="/bin/StatesServlet"
                        type="select"
                        xtype="selection"/>
                    <position5
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Select Fruits"
                        name="./fruits2"
                        options="/bin/FruitsServlet"
                        type="select"
                        xtype="selection"/>
                </items>
            </layout-three>
        </items>
    </items>
</jcr:root>
