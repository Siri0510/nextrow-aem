<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="cq:Dialog"
    xtype="dialog">
    <items
        jcr:primaryType="nt:unstructured"
        xtype="tabpanel">
        <items jcr:primaryType="cq:WidgetCollection">
            <first
                jcr:primaryType="cq:Widget"
                title="First"
                xtype="panel">
                <items jcr:primaryType="cq:WidgetCollection">
                    <title1
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Name"
                        name="./first"
                        xtype="textfield"/>
                    <textarea1
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Description"
                        name="./area1"
                        xtype="textarea"/>
                    <ColorList1 
                     		jcr:primaryType="cq:Widget" 
                       	 	fieldLabel="Color" 
                        	xtype="colorlist" 
                        	name="./color1"/>
                </items>
            </first>
            <second
                jcr:primaryType="cq:Widget"
                title="Second"
                xtype="panel">
                <items jcr:primaryType="cq:WidgetCollection">
                    <title2
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Name"
                        name="./second"
                        xtype="textfield"/>
                    <textarea2
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Description"
                        name="./area2"
                        xtype="textarea"/>	
                     <ColorList2 
                     		jcr:primaryType="cq:Widget" 
                       	 	fieldLabel="Color" 
                        	xtype="colorlist" 
                        	name="./color2"/>    
                </items>
            </second>
            <third
                jcr:primaryType="cq:Widget"
                title="Third"
                xtype="panel">
                <items jcr:primaryType="cq:WidgetCollection">
                    <title3
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Name"
                        name="./third"
                        xtype="textfield"/>
                   <textarea3
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Description"
                        name="./area3"
                        xtype="textarea"/>
                   <ColorList3 
                     	jcr:primaryType="cq:Widget" 
                       	fieldLabel="Color" 
                        xtype="colorlist" 
                        name="./color3"/> 	
                </items>
            </third>
            <fourth
                jcr:primaryType="cq:Widget"
                title="Fourth"
                xtype="panel">
                <items jcr:primaryType="cq:WidgetCollection">
                    <title4
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Name"
                        name="./fourth"
                        xtype="textfield"/>
                   <textarea4
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Description"
                        name="./area4"
                        xtype="textarea"/>
                   <ColorList4 
                     	jcr:primaryType="cq:Widget" 
                       	fieldLabel="Color" 
                        xtype="colorlist" 
                        name="./color4"/> 	
                </items>
            </fourth>
        </items>
    </items>
</jcr:root>
