<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="cq:Dialog"
    xtype="dialog">
    <items
        jcr:primaryType="nt:unstructured"
        xtype="tabpanel">
        <items
            jcr:primaryType="cq:WidgetCollection">
            <tab
                jcr:primaryType="cq:Widget"
                title="content"
                xtype="panel">
                <items
                    jcr:primaryType="cq:WidgetCollection">
                    <select
                        jcr:primaryType="cq:Widget"
                        fieldLabel="ShowTab"
                        name="./show"
                        type="select"
                        xtype="selection">
                        <options
                            jcr:primaryType="cq:WidgetCollection">
                            <option1
                                jcr:primaryType="nt:unstructured"
                                text="Yes"
                                value="yes" />
                            <option2
                                jcr:primaryType="nt:unstructured"
                                text="No"
                                value="no" />
                            <option3
                                jcr:primaryType="nt:unstructured"
                                text="Maybe"
                                value="maybe" />
                            <option4
                                jcr:primaryType="nt:unstructured"
                                text="Perfect"
                                value="perfect" />
                        </options>
                        <listeners
                            jcr:primaryType="nt:unstructured"
                            loadcontent="function(field){var d = field.findParentByType('tabpanel'); d.hideTabStripItem('tab2');            d.hideTabStripItem('tab3');           d.hideTabStripItem('tab4');}"
                            selectionchanged="function( field,value, isChecked ){if (field !=null){var d = field.findParentByType('tabpanel');console.log(d); console.log(value);                if (value == 'no'){            d.hideTabStripItem('tab2');            d.hideTabStripItem('tab3');           d.hideTabStripItem('tab4');          }else if(value == 'yes'){            d.unhideTabStripItem('tab2');            d.hideTabStripItem('tab3');           d.hideTabStripItem('tab4');          }else if(value == 'maybe'){          d.hideTabStripItem('tab2');           d.unhideTabStripItem('tab3');          d.hideTabStripItem('tab4');          }else{          d.hideTabStripItem('tab2');           d.hideTabStripItem('tab3');          d.unhideTabStripItem('tab4');          }         }         }" />
                    </select>
                </items>
            </tab>
            <tab2
                jcr:primaryType="cq:Panel"
                title="tab2"
                itemId="tab2"
                xtype="panel">
                <items
                    jcr:primaryType="cq:Widget">
                    <textfield
                        jcr:primaryType="cq:Widget"
                        fieldDescription="this is a textfield"
                        fieldLabel="textfield..."
                        name="./textfield"
                        xtype="textfield" />
                </items>
            </tab2>
            <tab3
                jcr:primaryType="cq:Panel"
                title="tab3"
                itemId="tab3"
                xtype="panel">
                <items
                    jcr:primaryType="cq:Widget">
                    <textfield
                        jcr:primaryType="cq:Widget"
                        fieldDescription="this is a textfield"
                        fieldLabel="textfield..."
                        name="./textfield"
                        xtype="textfield" />
                </items>
            </tab3>
            <tab4
                jcr:primaryType="cq:Panel"
                title="tab4"
                itemId="tab4"
                xtype="panel">
                <items
                    jcr:primaryType="cq:Widget">
                    <textfield
                        jcr:primaryType="cq:Widget"
                        fieldDescription="this is a textfield"
                        fieldLabel="textfield..."
                        name="./textfield"
                        xtype="textfield" />
                </items>
            </tab4>
            <tab5
                jcr:primaryType="cq:Panel"
                title="tab5"
                xtype="panel">
                <items
                    jcr:primaryType="cq:WidgetCollection">
                    <loadimage
                        jcr:primaryType="cq:Widget"
                        cropParameter="./imageCrop"
                        ddGroups="[media]"
                        fileNameParameter="./fileName"
                        fileReferenceParameter="./fileReference"
                        mapParameter="./imageMap"
                        name="./file"
                        rotateParameter="./imageRotate"
                        sizeLimit="100"
                        height="200"
                        fieldLabel="Image"
                        xtype="html5smartimage">
                        <listeners
                            jcr:primaryType="nt:unstructured"
                            loadcontent="function(comp){var dlg = comp.findParentByType('dialog');var textfield = dlg.getField('./textfield');textfield.hide();console.log(dlg);}"
                            loadimage="function(comp, val, isChecked){var dlg = comp.findParentByType('dialog');var textfield = dlg.getField('./textfield');isChecked ? textfield.hide() : textfield.show(); CQ.Ext.Msg.alert('Status', 'Image Loaded!!!'); }" />
                    </loadimage>
                    <textfield1
                        jcr:primaryType="cq:Widget"
                        fieldDescription="this is a textfield"
                        fieldLabel="Textfield"
                        name="./textfield"
                        xtype="textfield" />
                </items>
            </tab5>
        </items>
    </items>
</jcr:root>